{
  "name": "linkedin-airtable-commenter",
  "version": "1.1.0",
  "description": "Chrome extension for automatically commenting on LinkedIn posts using Airtable data",
  "main": "src/background.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit_tests.js",
    "test:integration": "jest tests/integration_tests.js",
    "test:system": "jest tests/system_tests.js",
    "test:e2e": "jest tests/e2e_tests.js",
    "test:api": "jest tests/api_automation_tests.js",
    "test:ui": "jest tests/ui_tests.js",
    "test:all": "jest tests/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug"
  },
  "keywords": [
    "chrome-extension",
    "linkedin",
    "airtable",
    "automation",
    "commenting"
  ],
  "author": "CoderFarm",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@playwright/test": "^1.40.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.min.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/*_tests.js"
    ],
    "testPathIgnorePatterns": [
      "airtable_probe.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
