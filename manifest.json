{
  "manifest_version": 3,
  "name": "CoderFarm commenter",
  "version": "1.1",
  "description": "Automatically comments on LinkedIn posts using data from Airtable.",
  "permissions": [
  "tabs",
  "scripting",
  "storage",
  "alarms"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }  ,
  "host_permissions": [
  "https://www.linkedin.com/*",
  "https://api.airtable.com/*"
  ]
}